#:import dp kivy.metrics.dp

# --- Etiquetas ---
<Label>:
    color: 0, 0, 0, 1

# --- Botones ---
<Button>:
    background_normal: ""        # Desactiva el fondo negro default
    background_color: 0.2, 0.6, 0.9, 1
    color: 1, 1, 1, 1
    font_size: dp(16)
    padding: dp(8), dp(8)

# --- Inputs ---
<TextInput>:
    foreground_color: 0, 0, 0, 1
    cursor_color: 0, 0, 0, 1
    background_normal: ""
    background_color: 1, 1, 1, 1

# --- Spinner ---
<Spinner>:
    background_normal: ""
    background_color: 1, 1, 1, 1
    color: 0, 0, 0, 1
