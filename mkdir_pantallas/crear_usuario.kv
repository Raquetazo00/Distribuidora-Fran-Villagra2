<CrearUsuarioScreen>:
    name: "crear_usuario"

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(40)
        md_bg_color: 0.95, 0.95, 0.97, 1

        MDLabel:
            text: "Crear nuevo usuario"
            font_style: "H4"
            halign: "center"

        MDTextField:
            id: usuario_input
            hint_text: "Nombre de usuario"
            mode: "rectangle"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password_input
            hint_text: "Contrase√±a"
            password: True
            mode: "rectangle"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}

        # ==============================
        # SELECTOR DE ROL (DROPDOWN)
        # ==============================
        MDRectangleFlatButton:
            id: rol_selector
            text: "Seleccione un rol"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            on_release: root.abrir_selector_roles()

        MDLabel:
            id: mensaje_label
            text: ""
            halign: "center"
            font_style: "Caption"
            size_hint_y: None
            height: dp(20)

        MDRectangleFlatButton:
            text: "Crear Usuario"
            size_hint_x: 0.4
            pos_hint: {"center_x": 0.5}
            md_bg_color: 0.2, 0.6, 0.9, 1
            on_release: root.validar_admin()

        MDRectangleFlatButton:
            text: "Volver al Panel"
            size_hint_x: 0.3
            pos_hint: {"center_x": 0.5}
            md_bg_color: 0.5, 0.5, 0.5, 1
            on_release: root.volver_al_panel()
