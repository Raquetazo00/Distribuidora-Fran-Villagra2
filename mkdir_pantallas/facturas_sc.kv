<FacturaScreen>:
    name: "factura"   # ✅ ahora sí es válido
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Facturación"
            font_size: "24sp"
            bold: True

        Button:
            text: "Cargar productos"
            on_press: root.on_pre_enter()

Button:
    text: "Emitir factura"
    on_press:
        root.emitir_factura([
        {"id": 1, "cantidad": 2, "precio": 1000}, \
        {"id": 2, "cantidad": 1, "precio": 500} \
        ])

