#:import dp kivy.metrics.dp

<FacturaScreen>:

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.97, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        spacing: dp(10)
        padding: dp(10)

        # ====================================
        # TÍTULO CENTRADO ARRIBA
        # ====================================
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"
            size_hint_y: None
            height: dp(50)

            Label:
                text: "Facturación"
                font_size: dp(30)
                bold: True
                color: 0.2, 0.2, 0.2, 1

        # ====================================
        # CONTENIDO SCROLLEABLE
        # ====================================
        ScrollView:
            size_hint_y: 1

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(15)
                padding: dp(10)

                # ====================================
                # TIPO DE FACTURA
                # ====================================
                BoxLayout:
                    size_hint_y: None
                    height: dp(45)
                    spacing: dp(10)

                    Label:
                        text: "Tipo de Factura:"
                        bold: True
                        size_hint_x: 0.3
                        color: 0.1, 0.1, 0.1, 1

                    Spinner:
                        id: tipo_factura
                        text: "Factura A"
                        values: ["Factura A", "Factura B"]
                        size_hint_x: 0.4

                # ====================================
                # DATOS DEL CLIENTE
                # ====================================
                Label:
                    text: "Datos del Cliente"
                    bold: True
                    size_hint_y: None
                    height: dp(30)
                    color: 0.1, 0.1, 0.1, 1

                BoxLayout:
                    size_hint_y: None
                    height: dp(45)
                    spacing: dp(10)

                    TextInput:
                        id: cliente_nombre
                        hint_text: "Nombre"

                    TextInput:
                        id: cliente_apellido
                        hint_text: "Apellido"

                    TextInput:
                        id: cliente_telefono
                        hint_text: "Teléfono"
                        input_filter: "int"

                    TextInput:
                        id: cliente_email
                        hint_text: "Email"

                TextInput:
                    id: cliente_ci
                    hint_text: "C.I. / RUT"
                    size_hint_y: None
                    height: dp(40)

                # ====================================
                # SECCIÓN DOS COLUMNAS (IZQ: BUSCADOR / DER: CARRITO)
                # ====================================
                BoxLayout:
                    orientation: "horizontal"
                    spacing: dp(15)
                    size_hint_y: None
                    height: dp(350)

                    # -------- IZQUIERDA: BUSCADOR Y AGREGAR --------
                    BoxLayout:
                        orientation: "vertical"
                        spacing: dp(10)
                        size_hint_x: 0.5

                        Label:
                            text: "Agregar productos"
                            bold: True
                            size_hint_y: None
                            height: dp(30)

                        # BARRA DE BÚSQUEDA
                        TextInput:
                            id: buscar_producto
                            hint_text: "Buscar producto..."
                            multiline: False
                            size_hint_y: None
                            height: dp(40)
                            on_text: root.buscar_producto_factura(self.text)

                        # RESULTADOS DE BÚSQUEDA
                        ScrollView:
                            size_hint_y: None
                            height: dp(120)

                            BoxLayout:
                                id: resultados_busqueda
                                orientation: "vertical"
                                size_hint_y: None
                                height: self.minimum_height
                                spacing: dp(4)

                        # CANTIDAD + BOTÓN AGREGAR
                        BoxLayout:
                            size_hint_y: None
                            height: dp(40)
                            spacing: dp(10)

                            TextInput:
                                id: cantidad_producto
                                hint_text: "1"
                                input_filter: "int"
                                size_hint_x: .3

                            Button:
                                text: "Agregar"
                                size_hint_x: .7
                                on_release: root._agregar_wrapper()

                    # -------- DERECHA: CARRITO + TOTAL + BOTONES --------
                    BoxLayout:
                        orientation: "vertical"
                        spacing: dp(10)
                        size_hint_x: 0.5

                        Label:
                            text: "Carrito de Compras"
                            bold: True
                            size_hint_y: None
                            height: dp(30)

                        ScrollView:
                            size_hint_y: 1

                            GridLayout:
                                id: carrito_grid
                                cols: 5
                                spacing: dp(5)
                                size_hint_y: None
                                height: self.minimum_height
                                padding: dp(5)

                        Label:
                            text: "Total: $" + str(root.total_carrito)
                            font_size: dp(20)
                            bold: True
                            size_hint_y: None
                            height: dp(35)
                            color: 0, 0, 0, 1

                        BoxLayout:
                            size_hint_y: None
                            height: dp(45)
                            spacing: dp(10)

                            Button:
                                text: "Vaciar Carrito"
                                on_release: root.limpiar_carrito()

                            Button:
                                text: "Generar Factura"
                                on_release: root._generar_wrapper()
