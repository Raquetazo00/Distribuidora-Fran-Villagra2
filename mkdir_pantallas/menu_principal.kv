<MenuPrincipalScreen>:

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.9, None
            height: self.minimum_height
            spacing: dp(25)
            padding: dp(30)
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.97, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Menú Principal"
                font_size: dp(32)
                bold: True
                color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: dp(60)

            Label:
                text: "Bienvenido al sistema de distribuidora"
                font_size: dp(18)
                color: 0.3, 0.3, 0.3, 1
                halign: 'center'
                text_size: self.size

            Widget:
                size_hint_y: 0.1

            Button:
                text: "Volver al Login"
                size_hint: (0.4, None)
                height: dp(45)
                pos_hint: {"center_x": 0.5}
                font_size: dp(16)
                on_release: root.volver_al_login()
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]

    BoxLayout:
        orientation: "vertical"
        spacing: dp(10)
        padding: dp(10)

        # Encabezado simple
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

            Label:
                text: "Menú Principal"
                font_size: dp(24)
                bold: True

            Button:
                text: "Facturación"
                size_hint_x: None
                width: dp(120)
                on_release: root.ir_a_facturacion()

            Button:
                text: "Salir"
                size_hint_x: None
                width: dp(100)
                on_release: root.confirmar_salida()

        # Resto de contenido
        BoxLayout:
            orientation: "vertical"
            spacing: dp(10)

            Label:
                text: "Búsqueda de productos"
                font_size: dp(16)
                bold: True
                size_hint_y: None
                height: dp(30)

            BoxLayout:
                size_hint_y: None
                height: dp(45)
                spacing: dp(10)

                TextInput:
                    id: buscar_input
                    hint_text: "Buscar producto…"
                    multiline: False

                Button:
                    text: "Buscar"
                    size_hint_x: None
                    width: dp(120)
                    on_release: root.buscar_producto(buscar_input.text)

            Label:
                text: "Productos disponibles"
                font_size: dp(16)
                bold: True
                size_hint_y: None
                height: dp(30)

            ScrollView:
                BoxLayout:
                    id: tabla_productos
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(5)

            Label:
                text: "Carrito"
                font_size: dp(16)
                bold: True
                size_hint_y: None
                height: dp(30)

            ScrollView:
                BoxLayout:
                    id: tabla_carrito
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(5)

            BoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: dp(10)

                Label:
                    id: lbl_total
                    text: "Total: $0.00"
                    font_size: dp(18)
                    bold: True

                Button:
                    text: "Previsualizar Venta"
                    on_release: root.previsualizar_venta()
