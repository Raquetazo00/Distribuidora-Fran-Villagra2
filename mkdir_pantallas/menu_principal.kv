<MenuPrincipalScreen>:

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.92, None
            height: self.minimum_height
            spacing: dp(20)
            padding: dp(20)

            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.97, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            # -----------------------
            # ENCABEZADO
            # -----------------------
            BoxLayout:
                size_hint_y: None
                height: dp(45)
                spacing: dp(10)

                # ❗ ELIMINADO botón Clientes
                # ❗ ELIMINADA etiqueta “Cliente no seleccionado”

                Widget:   # Ocupa el espacio vacío para mantener estructura

                Label:
                    text: root.hora_actual
                    font_size: dp(18)
                    bold: True
                    color: 0.1, 0.1, 0.1, 1
                    size_hint_x: None
                    width: dp(100)

                Button:
                    text: "Salir"
                    size_hint: None, None
                    size: dp(80), dp(35)
                    on_release: root.confirmar_salida()
                    font_size: dp(14)
                    color: 1, 1, 1, 1
                    canvas.before:
                        Color:
                            rgba: 0.9, 0.2, 0.2, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [8]

            # -----------------------
            # BUSCADOR
            # -----------------------
            BoxLayout:
                size_hint_y: None
                height: dp(45)
                spacing: dp(10)

                TextInput:
                    id: buscar_input
                    hint_text: "Buscar producto por nombre o código..."
                    multiline: False
                    on_text_validate: root.programar_busqueda(self.text)

                Button:
                    text: "Buscar"
                    size_hint_x: None
                    width: dp(120)
                    on_release: root.buscar_producto(buscar_input.text)
                    color: 1, 1, 1, 1
                    canvas.before:
                        Color:
                            rgba: 0.2, 0.6, 0.9, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [10]

            Label:
                text: "Productos disponibles"
                font_size: dp(18)
                bold: True
                size_hint_y: None
                height: dp(35)
                color: 0, 0, 0, 1

            ScrollView:
                size_hint_y: None
                height: dp(200)
                bar_width: dp(10)

                BoxLayout:
                    id: tabla_productos
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(4)
                    padding: dp(6)

            Label:
                text: "Productos en la venta actual"
                font_size: dp(18)
                bold: True
                size_hint_y: None
                height: dp(35)
                color: 0, 0, 0, 1

            ScrollView:
                size_hint_y: None
                height: dp(200)
                bar_width: dp(10)

                BoxLayout:
                    id: tabla_carrito
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(4)
                    padding: dp(6)

            BoxLayout:
                size_hint_y: None
                height: dp(60)
                spacing: dp(10)

                Label:
                    id: lbl_total
                    text: "Total: $0.00"
                    font_size: dp(22)
                    bold: True
                    color: 0, 0, 0, 1

                Button:
                    text: "Previsualizar Venta"
                    background_color: 0.1, 0.6, 0.3, 1
                    color: 1, 1, 1, 1
                    font_size: dp(18)
                    on_release: root.previsualizar_venta()
