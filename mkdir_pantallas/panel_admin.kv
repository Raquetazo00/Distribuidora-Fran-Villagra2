<PanelAdminScreen>:
    name: "panel_admin"

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(30)
        padding: dp(30)
        md_bg_color: 0.96, 0.96, 0.96, 1

        MDLabel:
            text: "Panel de Administrador"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Primary"
            size_hint_y: None
            height: dp(60)

        MDLabel:
            text: "Gestiona usuarios, productos y facturaci√≥n"
            halign: "center"
            font_style: "Subtitle1"
            theme_text_color: "Secondary"
            size_hint_y: None
            height: dp(20)

        Widget:
            size_hint_y: 0.1


        # === BOTONES (sin card) ===
        MDRaisedButton:
            text: "Crear Usuario"
            icon: "account-plus"
            size_hint: 0.6, None
            height: dp(50)
            pos_hint: {"center_x": .5}
            md_bg_color: 0.20, 0.55, 0.90, 1
            on_release: root.ir_a_crear_usuario()

        MDRaisedButton:
            text: "Agregar Producto"
            icon: "package-variant-plus"
            size_hint: 0.6, None
            height: dp(50)
            pos_hint: {"center_x": .5}
            md_bg_color: 0.00, 0.75, 0.40, 1
            on_release: root.ir_a_agregar_producto()

        MDRaisedButton:
            text: "Ver Ventas / Facturas"
            icon: "file-document-multiple"
            size_hint: 0.6, None
            height: dp(50)
            pos_hint: {"center_x": .5}
            md_bg_color: 0.55, 0.30, 0.90, 1
            on_release: root.ir_a_ver_ventas()

        Widget:
            size_hint_y: 0.15


        MDRaisedButton:
            text: "Volver al Login"
            icon: "logout"
            size_hint: 0.4, None
            height: dp(45)
            pos_hint: {"center_x": .5}
            md_bg_color: 0.45, 0.45, 0.45, 1
            on_release: root.volver_al_login()
