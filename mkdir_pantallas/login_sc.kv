<LoginScreen>:
    name: "login"

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(40)
        md_bg_color: 0.95, 0.95, 0.97, 1

        MDLabel:
            text: "Sistema de Distribuidora"
            font_style: "H4"
            halign: "center"

        MDLabel:
            text: "Iniciar Sesión"
            font_style: "H6"
            halign: "center"

        MDTextField:
            id: usuario_input
            hint_text: "Usuario"
            icon_right: "account"
            mode: "rectangle"
            size_hint_x: 0.7
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password_input
            hint_text: "Contraseña"
            icon_right: "lock"
            password: True
            mode: "rectangle"
            size_hint_x: 0.7
            pos_hint: {"center_x": 0.5}

        MDLabel:
            id: mensaje_label
            text: ""
            halign: "center"
            font_style: "Caption"

        MDRectangleFlatButton:
            text: "Iniciar Sesión"
            size_hint_x: 0.4
            pos_hint: {"center_x": 0.5}
            on_release: root.validar_login()
