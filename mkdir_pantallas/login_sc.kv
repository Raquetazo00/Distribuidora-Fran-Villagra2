<LoginScreen>:
    name: "login"
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.9, None
            height: self.minimum_height
            spacing: dp(20)
            padding: dp(30)
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.97, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Sistema de Distribuidora"
                font_size: dp(34)
                bold: True
                color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: dp(60)

            Label:
                text: "Iniciar Sesión"
                font_size: dp(22)
                color: 0.4, 0.4, 0.4, 1
                size_hint_y: None
                height: dp(40)

            TextInput:
                id: usuario_input
                hint_text: "Usuario"
                size_hint_y: None
                height: dp(45)
                multiline: False

            TextInput:
                id: password_input
                hint_text: "Contraseña"
                size_hint_y: None
                height: dp(45)
                multiline: False
                password: True

            Label:
                id: mensaje_label
                text: ""
                font_size: dp(14)
                size_hint_y: None
                height: dp(25)
                color: 1, 0, 0, 1
                halign: 'center'
                text_size: self.size

            Button:
                text: "Iniciar Sesión"
                size_hint: (0.5, None)
                height: dp(50)
                pos_hint: {"center_x": 0.5}
                font_size: dp(18)
                on_release: root.validar_login(usuario_input.text, password_input.text)
                canvas.before:
                    Color:
                        rgba: 0.2, 0.6, 0.9, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12]
